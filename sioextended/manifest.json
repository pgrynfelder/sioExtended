{

  "manifest_version": 2,
  "name": "sioExtended",
  "version": "1.1.3",

  "description": "Makes SIO2 usable.",
  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "include_globs": ["*://sio2.*"],
      "js": ["zadanie.js"]
    },
    {
      "matches": ["*://*/*"],
      "include_globs": ["*://sio2.*/p/", "*://sio2.*/p"],
      "js": ["submit.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["*://*/*"],
      "include_globs": ["*://sio2.*/submit/*"],
      "js": ["select.js"]
    }
  ],
  "applications": {
    "gecko": {
      "update_url": "https://github.com/pitek1/sioExtended/raw/master/updates.json"
    }
  }
}

